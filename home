  <script>
    // Simple: smooth scroll for in-page links + minimal analytics hooks
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const target = document.querySelector(a.getAttribute('href'));
        if(target){
          e.preventDefault();
          target.scrollIntoView({behavior:'smooth',block:'start'});
        }
      });
    });

    // Fallback CTA actions (replace with real links / form handlers)
    document.getElementById('getStartedBtn').addEventListener('click', (e)=>{
      // demo: open contact section or signup (placeholder)
      if(!document.querySelector('#get-started')){
        e.preventDefault();
        alert('Get Started — replace with your signup or client onboarding flow.');
      }
    });

    document.getElementById('bookBtn').addEventListener('click', (e)=>{
      if(!document.querySelector('#book')){
        e.preventDefault();
        alert('Book a Consultation — replace with calendar/booking integration.');
      }
    });
  </script>
